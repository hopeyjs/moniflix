<% include partials/header %>

        <div class="container">
            <div class="row">
                <div class="module span4">
                    <form class="form-vertical" action="/users/profile/Settings" method="POST">
                        <div class="module-head">
                            <h3>My Account Settings</h3>
                        </div>
                        <% if(message != "") {%>
                        <div class="alert alert-dismissible" role="alert">
                        <%= message %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                        </div>
                        <% } %>
                        <div class="module-body">
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <input class="span12" name="bankName" type="text" id="bankName" placeholder="Enter Your Bank Name" value="<%= currentUser.bankName%>"> 
                                </div>
                            </div>
                        </div>
                        <div class="module-body">
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <input class="span12" name="accountName" type="text" id="accountName" placeholder="Enter Your Account Name" value="<%= currentUser.accountNumber%>"> 
                                </div>
                            </div>
                        </div>
                        <div class="module-body">
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <input class="span12" name="accountNumber" type="text" id="accountNumber" placeholder="Enter Your Account Number" value="<%= currentUser.accountNumber%>"> 
                                </div>
                            </div>
                        </div>
                        <div class="module-foot">
                            <div class="control-group">
                                <div class="controls clearfix">
                                    <button type="submit" class="btn btn-primary pull-right">Update Bank Details</button>
                                </div>
                            </div>
                        </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!--/.wrapper-->



<% include partials/footer %>