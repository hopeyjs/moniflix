<% include partials/header %>

        <div class="container">
            <div class="row">
                <div class="module span4">
                    <form class="form-vertical" action="/users/deposit/flixcard" method="POST">
                        <div class="module-head">
                            <h3>Flix Card Deposit</h3>
                              <% if(message != "") {%>
                        <div class="alert alert-dismissible" role="alert">
                        <%= message %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                        </div>
                        <% } %>
                        </div>
                        <div class="module-body">
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <input class="span12" name="cardpin" minlength="10" type="number" required placeholder="Enter The Card Pin">
                                </div>
                            </div>
                             <div class="module-foot">
                            <div class="control-group">
                                <div class="controls clearfix">
                                    <button type="submit" class="btn btn-primary pull-right">Make Flix Card Deposit</button>
                                </div>
                            </div>
                        </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!--/.wrapper-->
                               





    <% include partials/footer %>